		"stylelint-prettier": "^1.1.1",
		"stylelint-scss": "^3.10.1",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.8",
		"webpack-dev-server": "^3.8.1",
		"yarn": "^1.17.3",
		"underscore.string": ">=3.3.5"
	},
	"dependencies": {
		"jquery": "^3.4.1",
		"selectize": "^0.12.6",
		"slick-carousel": "^1.8.1",
		"ymaps": "^0.2.1"
	}
